<FaqScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(1)
        md_bg_color: rgba('#ffffff') 

        MDBoxLayout:
            size_hint_y: None
            radius: (dp(0),dp(0),dp(20),dp(20))
            line_color: app.theme_cls.primary_color
            height: dp(70)
            
            MDLabel:
                text: 'О приложении'
                halign: 'center'
                font_size: '18sp'
                bold: True

        # ########## DESCRIPTION ##########       
        ScrollView:
            effect_cls: 'ScrollEffect'
            MDBoxLayout:
                spacing: dp(30)
                padding: dp(10)
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height

                MDBoxLayout:
#md_bg_color: 'red'
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_0.height + dp(20)
                    MDLabel:
                        text: 'Описание'
                        font_size: '16sp'
                        bold: True
                    MDLabel:
                        id: lbl_0
                        text: 'Изучи 120 непривильных глаголов английского языка.'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
#md_bg_color: 'red'
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_1.height + dp(20)
                    MDLabel:
                        text: 'Привет !'
                        font_size: '16sp'
                        bold: True
                    MDLabel:
                        id: lbl_1
                        text: 'Это приложение предусмотрено для того, чтобы помочь вам в изучении неправильных глаголов английского языка.'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
#md_bg_color: 'red'
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_2.height + dp(20)
                    MDLabel:
                        text: 'ЧТО ТАКОЕ НЕПРАВИЛЬНЫЕ ГЛАГОЛЫ ?'.capitalize()
                        font_size: '16sp'
                        bold: True
                    MDLabel:
                        id: lbl_2
                        text: 'Неправильные глаголы в английском языке - это глаголы, прошедшая форма которых, образуется не по правилам.То есть не путем добавления к основе глагола окончания -ed. Они просто меняют свою форму (do – did – done).'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
#md_bg_color: 'red'
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_3.height + dp(20)
                    MDLabel:
                        text: 'КТО ДОЛЖЕН ИСПОЛЬЗОВАТЬ ЭТО ПРИЛОЖЕНИЕ ?'.capitalize()
                        font_size: '16sp'
                        bold: True
                    MDLabel:
                        id: lbl_3
                        text: 'Все, кто хочет изучить неправильные глаголы английского языка может использовать это приложение. Оно предусмотрено как для новичков, так и для людей знающих английский язык.'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

        # ####### FOOTER ######## 

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            padding: [dp(15), dp(0), dp(0), dp(0)]
            MDLabel:
                text: 'Написать нам'
                font_size: '16sp'
                halign: 'left'

            MDIconButton:
                icon: 'i/soc_network/whatsapp96.png'
                icon_size: dp(50)
                pos_hint: {'center_y': .5}
                on_release: root.get_whatsapp()


            MDIconButton:
                icon: 'i/soc_network/telegram96.png'
                icon_size: dp(45)
                pos_hint: {'center_y': .5}
                on_release: root.get_telegram()


        MDBoxLayout:
            #md_bg_color: 'green'
            orientation: 'horizontal'
            #line_color: app.theme_cls.primary_color 
            #radius: (dp(0),dp(0),dp(20),dp(20))
            size_hint_y: None
            height: '50dp'
            #border_color: 'green'
            MDBoxLayout:
                #md_bg_color: 'grey'
                orientation: 'horizontal'
                size_hint_x: dp(0.2)
                canvas:
                    Color:
                        rgb: 1,1,1
                    Ellipse:
                        size: dp(45), dp(45)
                        source: 'i/icon_app.png'
                        pos: dp(16), dp(5)

            MDBoxLayout:
                size_hint_x: dp(0.3)
                #md_bg_color: 'white'
                orientation: 'vertical'
                padding: [dp(0), dp(7), dp(0), dp(7)]
                MDLabel:
                    text: 'Irregular Verbs'
                    theme_text_color: 'Primary'
                    font_size: '14sp'
                MDLabel:
                    id: app_version
                    theme_text_color: 'Hint'
                    font_size: '14sp'
            MDBoxLayout:
                orientation: 'vertical'
                padding: '5dp'
                padding: [dp(0), dp(7), dp(0), dp(7)]
                MDLabel:
                    id: fromtoyear
                    theme_text_color: 'Hint'
                    font_size: '14sp'

                MDTextButton:
                    text: '[u]Privacy Policy[/u]'
                    theme_text_color: 'Hint'
                    font_size: '14sp'
                    markup: True
                    on_release: root.get_privacy_police()
