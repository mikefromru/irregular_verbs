<FaqScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(1)
        md_bg_color: rgba('#ffffff') 

        MDBoxLayout:
            size_hint_y: None
            radius: (dp(0),dp(0),dp(20),dp(20))
            line_color: app.theme_cls.primary_color
            height: dp(70)
            
            MDLabel:
                text: 'О приложении'
                halign: 'center'
                font_name: 'OpenSans'
                font_size: '20sp'
                bold: True

        # ########## DESCRIPTION ##########       
        ScrollView:
            effect_cls: 'ScrollEffect'

            MDBoxLayout:
                spacing: dp(30)
                padding: dp(10)
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height

                MDBoxLayout:
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_0.height + dp(20)

                    MDLabel:
                        text: 'Описание'
                        font_name: 'OpenSans'
                        font_size: '15sp'
                        bold: True

                    MDLabel:
                        id: lbl_0
                        text: 'Изучи непривильны глаголы английского языка.'
                        font_size: '14sp'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_1.height + dp(20)

                    MDLabel:
                        text: 'Привет !'
                        font_name: 'OpenSans'
                        font_size: '15sp'
                        bold: True

                    MDLabel:
                        id: lbl_1
                        font_name: 'OpenSans'
                        text: 'Это приложение предусмотрено для того, чтобы помочь вам в изучении неправильных глаголов английского языка.'
                        font_size: '15sp'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_2.height + dp(20)

                    MDLabel:
                        text: 'ЧТО ТАКОЕ НЕПРАВИЛЬНЫЕ ГЛАГОЛЫ ?'.capitalize()
                        font_name: 'OpenSans'
                        font_size: '15sp'
                        bold: True

                    MDLabel:
                        id: lbl_2
                        font_name: 'OpenSans'
                        text: 'Неправильные глаголы в английском языке - это глаголы, прошедшая форма которых, образуется не по правилам.То есть не путем добавления к основе глагола окончания -ed. Они просто меняют свою форму (do – did – done).'
                        font_size: '15sp'
                        size_hint_x: 1
                        size_hint_y: None
                        size: self.texture_size

                MDBoxLayout:
                    spacing: dp(3)
                    orientation: 'vertical'
                    size_hint_y: None
                    height: lbl_3.height + dp(20)

                    MDLabel:
                        text: 'ДЛЯ КОГО ЭТО ПРИЛОЖЕНИЕ ?'.capitalize()
                        font_name: 'OpenSans'
                        font_size: '15sp'
                        bold: True

                    MDLabel:
                        id: lbl_3
                        text: 'Все, кто хочет изучить неправильные глаголы английского языка может использовать это приложение. Оно предусмотрено как для новичков, так и для людей знающих английский язык.'
                        font_size: '15sp'
                        size_hint_x: 1
                        font_name: 'OpenSans'
                        size_hint_y: None
                        size: self.texture_size

#MDRectangleFlatIconButton:
#                    icon: 'robot'
#                    text: 'Наш телеграм бот'
                    #md_bg_color: app.theme_cls.primary_color
#                    font_name: 'OpenSans'
#                    pos_hint: {'center_x': .5}


        # ####### FOOTER ######## 
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: [dp(15), dp(0), dp(0), dp(0)]

            MDLabel:
                text: 'Написать нам\nТелеграм бот'
                font_name: 'OpenSans'
                font_size: '15sp'
                halign: 'left'

            MDIconButton:
                icon: 'i/soc_network/chat_bot.png'
                icon_size: dp(50)
                pos_hint: {'center_y': .5}
                on_release: root.get_link('telegram_bot')


            MDIconButton:
                icon: 'i/soc_network/whatsapp96.png'
                icon_size: dp(50)
                pos_hint: {'center_y': .5}
                on_release: root.get_link('whatsapp_link')

            MDIconButton:
                icon: 'i/soc_network/telegram96.png'
                icon_size: dp(45)
                pos_hint: {'center_y': .5}
                on_release: root.get_link('telegram_link')

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_x: dp(0.2)
                canvas:
                    Color:
                        rgb: 1,1,1
                    Ellipse:
                        size: dp(45), dp(45)
                        source: 'i/icon_app.png'
                        pos: dp(16), dp(5)

            MDBoxLayout:
                size_hint_x: dp(0.3)
                orientation: 'vertical'
                padding: [dp(0), dp(7), dp(0), dp(7)]

                MDLabel:
                    text: 'Irregular Verbs'
                    font_name: 'OpenSans'
                    theme_text_color: 'Primary'
                    font_size: '14sp'

                MDLabel:
                    id: app_version
                    theme_text_color: 'Hint'
                    font_size: '14sp'

            MDBoxLayout:
                orientation: 'vertical'
                padding: '5dp'
                padding: [dp(0), dp(7), dp(0), dp(7)]

                MDLabel:
                    id: fromtoyear
                    font_name: 'OpenSans'
                    theme_text_color: 'Hint'
                    font_size: '14sp'

                MDTextButton:
                    text: '[u]Privacy Policy[/u]'
                    theme_text_color: 'Hint'
                    font_name: 'OpenSans'
                    font_size: '14sp'
                    markup: True
                    on_release: root.get_link('privacy_police')
